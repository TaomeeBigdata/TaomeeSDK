#----------------------------------
# example Makefile used to generate
# binary .so file
#----------------------------------

XX			= g++
INCLUDES	= -I/usr/include/glib-2.0 -I/usr/lib/glib-2.0/include/ -I../
#FLAGS		=  -Wall -DDEBUG -g -fPIC -MMD
FLAGS		= -std=c++0x -Wall -Wnon-virtual-dtor -DNDEBUG -O2 -ggdb -shared -fPIC -MMD
SOURCE		= $(wildcard *.cpp)
OBJS		= $(patsubst %.cpp, %.o, $(SOURCE))
TARGET		= ./libstatlogger64bit.so

all: $(TARGET)
%.o: %.cpp Makefile
	$(XX) $(FLAGS) $(INCLUDES) -c $< -o $@
	@-mv -f $*.d .dep.$@

$(TARGET): $(OBJS)
	$(XX) $(FLAGS) $(OBJS) -o $(TARGET)
	rm -f *.o


clean:
	rm -rf *.o .dep.* $(TARGET)

#-include /dev/null $(wildcard .dep.*)
